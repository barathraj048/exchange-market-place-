    "outDir": "./dist",

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // IMPORTANT â€” turn this OFF
